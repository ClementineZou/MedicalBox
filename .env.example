# Environment variables
DATABASE_URL="file:./prisma/dev.db"

# You can also use PostgreSQL or MySQL
# DATABASE_URL="postgresql://username:password@localhost:5432/medicalbox?schema=public"
# DATABASE_URL="mysql://username:password@localhost:3306/medicalbox"

# Better Auth (Required)
BETTER_AUTH_SECRET="your-super-secret-key-min-32-chars-long-change-this-in-production"
BETTER_AUTH_URL="http://localhost:3000"

# Passkey (Required)
PASSKEY_RP_ID=""

# Cloudflare Turnstile (Required)
TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# Google Analytics (optional - leave empty to disable)
GOOGLE_ANALYTICS_ID=""

# Nuxt public runtime config
NUXT_PUBLIC_API_BASE="/api"
